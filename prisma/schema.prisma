generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String               @id @default(cuid())
  businessId      String               @unique
  password        String
  image           String?
  accounts        Account[]
  sessions        Session[]
  menuItems       MenuItem[]
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  settings        Settings?
  paymentAccounts PaymentAccount[]
  linkedAccounts  LinkedAccount[] // NEW: Track linked bank accounts
  linkRequests    PaymentLinkRequest[] // NEW: Track QR link attempts
  orders          Order[] // NEW: For tracking customer orders
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MenuItem {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  category    String
  image       String?
  isAvailable Boolean     @default(true)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[] // NEW: Track which orders contain this item

  @@index([userId])
  @@index([userId, category])
  @@index([category, isAvailable])
}

model Settings {
  id     String @id @default(cuid())
  userId String @unique

  // Payment settings
  acceptCardPayments Boolean @default(true)
  qrCodePayments     Boolean @default(true)
  cashPayments       Boolean @default(true)
  defaultTaxRate     Float   @default(0)

  // User mode
  userMode String @default("owner")

  // Display and interface
  language   String  @default("en")
  currency   String  @default("usd")
  dateFormat String  @default("mm-dd-yyy")
  timeFormat String  @default("12h")
  darkMode   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PaymentAccount {
  id            String   @id @default(cuid())
  userId        String
  provider      String
  merchantId    String
  apiKeyHash    String
  webhookSecret String?
  isActive      Boolean  @default(true)
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
}

// ============================================
// NEW MODELS FOR ACCOUNT LINKING FEATURE
// ============================================

// This stores the actual linked bank accounts (ABA, Wing, etc.)
model LinkedAccount {
  id       String @id @default(cuid())
  userId   String // Which business owner owns this
  provider String // 'ABA', 'WING', etc.

  // Encrypted tokens from the bank
  // WHY ENCRYPTED: These are like passwords - very sensitive!
  ctidEncrypted String // Consumer Token ID (encrypted)
  pwtEncrypted  String // PayWay Token (encrypted)

  // Safe info we can show to users
  maskAccount String // e.g., "*****1234" - safe to display

  // Token lifecycle
  tokenExpiresAt DateTime // When this token expires (usually 60 days)
  isActive       Boolean  @default(true) // Can manually disable

  // Tracking
  linkedAt  DateTime  @default(now()) // When they first linked
  lastUsed  DateTime? // Last time we used this for a payment
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[] // Track which orders used this account

  // Ensure one user can only link each provider once
  @@unique([userId, provider])
  @@index([userId])
  @@index([provider])
}

// This tracks each QR code linking attempt
// WHY: When user scans QR, bank sends data back. We need to know which user it was for.
model PaymentLinkRequest {
  id          String @id @default(cuid())
  userId      String // Who initiated this link request
  provider    String // Which bank (ABA, Wing, etc.)
  returnParam String @unique // Unique ID we send to bank, they send back

  // Status tracking
  // 'pending' = QR shown, waiting for scan
  // 'completed' = User scanned, account linked
  // 'expired' = QR expired before scanning
  // 'failed' = Something went wrong
  status String @default("pending")

  // Lifecycle
  expiresAt DateTime // QR codes expire (usually 5-10 minutes)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([returnParam])
  @@index([status])
}

// ============================================
// NEW MODELS FOR ORDER/PAYMENT TRACKING
// ============================================

// Customer information
model Customer {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@index([email])
  @@index([phone])
}

// Orders from customers
model Order {
  id String @id @default(cuid())

  // Who is this order for?
  merchantId String // Which business owner
  customerId String // Which customer

  // Payment tracking
  linkedAccountId String? // Which linked account receives payment
  paymentProvider String? // 'ABA', 'WING', etc.
  paymentStatus   String  @default("pending") // 'pending', 'paid', 'failed', 'refunded'
  paywayTranId    String? @unique // Transaction ID from payment provider

  // Order details
  subtotal Float // Sum of items
  tax      Float  @default(0)
  total    Float // subtotal + tax
  currency String @default("USD")

  // Payment details (filled after payment)
  paidAt    DateTime?
  paywayApv String? // APV number from ABA (proof of payment)

  // QR generation tracking
  qrGeneratedAt DateTime?
  qrExpiresAt   DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  merchant      User           @relation(fields: [merchantId], references: [id])
  customer      Customer       @relation(fields: [customerId], references: [id])
  linkedAccount LinkedAccount? @relation(fields: [linkedAccountId], references: [id])
  items         OrderItem[]

  @@index([merchantId])
  @@index([customerId])
  @@index([paymentStatus])
  @@index([paywayTranId])
}

// Individual items in an order
model OrderItem {
  id         String @id @default(cuid())
  orderId    String
  menuItemId String

  // Snapshot of item details at time of order
  // WHY: If merchant changes price later, order should show original price
  name     String
  price    Float
  quantity Int

  createdAt DateTime @default(now())

  // Relations
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@index([menuItemId])
}
