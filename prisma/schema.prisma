generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String               @id @default(cuid())
  businessId      String               @unique
  password        String
  image           String?
  accounts        Account[]
  sessions        Session[]
  menuItems       MenuItem[]
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  settings        Settings?
  orders          Order[]
  bankQRCodes     BankQRCode[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MenuItem {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  category    String
  image       String?
  isAvailable Boolean     @default(true)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[] // NEW: Track which orders contain this item

  @@index([userId])
  @@index([userId, category])
  @@index([category, isAvailable])
}

model Settings {
  id     String @id @default(cuid())
  userId String @unique

  // Payment settings
  acceptCardPayments Boolean @default(true)
  qrCodePayments     Boolean @default(true)
  cashPayments       Boolean @default(true)
  defaultTaxRate     Float   @default(0)

  // User mode
  userMode String @default("owner")

  // Display and interface
  language   String  @default("en")
  currency   String  @default("usd")
  dateFormat String  @default("mm-dd-yyy")
  timeFormat String  @default("12h")
  darkMode   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}


// ============================================
// NEW MODELS FOR ORDER/PAYMENT TRACKING
// ============================================

// Customer information
model Customer {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]

  @@index([email])
  @@index([phone])
}

// Orders from customers
model Order {
  id String @id @default(cuid())

  // Who is this order for?
  merchantId String // Which business owner
  customerId String // Which customer

  // Payment tracking
  paymentStatus String @default("pending") // 'pending', 'paid', 'failed', 'refunded'

  // Order details
  subtotal Float // Sum of items
  tax      Float  @default(0)
  total    Float // subtotal + tax
  currency String @default("USD")

  // Payment details (filled after payment)
  paidAt DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  merchant User     @relation(fields: [merchantId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])
  items    OrderItem[]

  @@index([merchantId])
  @@index([customerId])
  @@index([paymentStatus])
}

// Individual items in an order
model OrderItem {
  id         String @id @default(cuid())
  orderId    String
  menuItemId String

  // Snapshot of item details at time of order
  // WHY: If merchant changes price later, order should show original price
  name     String
  price    Float
  quantity Int

  createdAt DateTime @default(now())

  // Relations
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@index([menuItemId])
}

model BankQRCode {
  id        String   @id @default(cuid())
  userId    String
  bankName  String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bankName])
  @@index([userId])
}
